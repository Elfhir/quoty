{% extends "::index.html.twig" %}

{% block title %}QuotyUserBundle:Security:login{% endblock %}


{% block main_container %}

	<div class="row">
		<div class="q-quote-container col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
			<h2><span class="glyphicon glyphicon-log-in btn-lg"></span> Connexion </h2>
			<div class="well">

				{# S'il y a une erreur, on l'affiche dans un joli cadre #}
				{% if error %}
				<div class="alert alert-danger">{{ error.message }}</div>
				{% endif %}

				{# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
				<form role="form" class="form-horizontal" action="{{ path('login_check') }}" method="post">
					<fieldset class="input-group">
						<label class="col-lg-6"for="username">Login :</label>
						<input class="col-lg-6" type="text" id="username" name="_username" value="{{ last_username }}" />
					</fieldset>
					<fieldset class="input-group">
						<label class="col-lg-6" for="password">Mot de passe :</label>
						<input class="col-lg-6" type="password" id="password" name="_password" />
						<br />
						<input class="btn btn-primary" type="submit" value="Connexion" />
					</fieldset>
				</form>
			</div>
		</div>
	</div>

{% endblock %}

