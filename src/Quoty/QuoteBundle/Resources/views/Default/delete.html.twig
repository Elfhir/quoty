{# quoty/src/Quoty/QuoteBundle/Resources/views/Default/delete.html.twig #}

{% extends "::index.html.twig" %}

{% block main_container %}
	<div class="row">
		<div class="q-quote-container col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
			<h2><span class="glyphicon glyphicon-remove"></span> Supprimer une citation</h2>
			<div class="well">

				<p>
					<strong class="danger">Attention !</strong> La suppression de la quote
					est définitive !
				</p>

				<blockquote class="well">
					<p>« {{ quote.content}} »
					</p>
					<footer>
						<cite>{{ quote.author }}</cite>
					</footer>
				</blockquote>

				<form action="{{ path('quoty_quote_delete', {'id': quote.id}) }}" method="post">
					<a href="{{ path('quoty_quote_view', {'id': quote.id}) }}" class="btn btn-default">
						<span class="glyphicon glyphicon-chevron-left"></span>
						Retour à la quote
					</a>
					{# Ici j'ai écrit le bouton de soumission à la main #}
					<input type="submit" value="Supprimer" class="btn btn-danger" />
					{# CSRF #}
					{{ form_rest(form) }}
				</form>


			</div>
		</div>
	</div>
{% endblock %}

{% block masonry %}
{% endblock %}