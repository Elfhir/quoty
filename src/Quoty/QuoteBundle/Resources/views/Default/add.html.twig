{# quoty/src/Quoty/QuoteBundle/Resources/views/Default/add.html.twig #}

{% extends "::index.html.twig" %}

{% block main_container %}
	<div class="row">
		<div class="q-quote-container col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
			<h2><span class="glyphicon glyphicon-edit"></span> Ajouter une citation</h2>
			<div class="well">
				{{ form_start(
					form, 
					{'attr' : 
						{
							'class': 'form-horizontal',
							'action': path('quoty_quote_add')
						}
					}
					) 
				}}

				{# Les erreurs générales du formulaire. #}
				{{ form_errors(form) }}

				<div class="form-group">
					{{ form_label(form.author, "Auteur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

					{# Affichage des erreurs pour ce champ précis. #}
					{{ form_errors(form.author) }}

					<div class="col-sm-4">
						{{ form_widget(form.author, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
					</div>
				</div>

				{# Idem pour un autre champ. #}
				<div class="form-group">
					{{ form_label(form.content, "Citation", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.author) }}
					<div class="col-sm-9">
						{{ form_widget(form.content, {'attr': {'class': 'form-control', 'cols' : 80, 'required' : 'required'}}) }}
					</div>
				</div>

				{# Génération du label + error + widget pour un champ #}

				{{ form_row(form.author) }}

				{{ form_rest(form) }}

				{# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
				{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-right col-sm-3'}}) }}


	
				{{ form_end(form) }}

			</div>
		</div>
	</div>
{% endblock %}