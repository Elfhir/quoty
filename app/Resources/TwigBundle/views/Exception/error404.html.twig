{# quoty/app/Resources/views/index.html.twig #}

<!DOCTYPE html>
<html lang="">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="A website about Quote">
		<meta name="author" content="Elfhir - Jérémy Ta">
		<title>Quoty - The good quotes</title>
		<link rel="icon" href="../favicon.ico">
		<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">


		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
		<div class="wrapper">
			
			{% block main_menu %}
			<div class="fluid-container q-header-container text-center">
				<div class="navbar primary navbar-default">
					<ul class="nav navbar-nav">
						<li>
							<a href="#">Quoty</a>
						</li>
						<li class="active">
							<a href="{{ path('quoty_quote_viewlist')}}"><span class="glyphicon glyphicon-home"></span> Accueil</a>
						</li>
						<li>
							<a href="/about"><span class="glyphicon glyphicon-info-sign"></span> A propos</a>
						</li>
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li>
								<a href="{{ path('quoty_quote_add')}}" title="Add"><span class="glyphicon glyphicon-plus"></span> Ajouter une quote</a>
							</li>
								{% if is_granted('ROLE_ADMIN') %}
								<li>
									<a href="{{ path('quoty_quote_edit')}}" title="Add"><span class="glyphicon glyphicon-edit"></span> Editer une quote</a>
								</li>
								<li>
									<a href="{{ path('quoty_quote_delete')}}" title="Add"><span class="glyphicon glyphicon-remove-sign"></span> Supprimer une quote</a>
								</li>
								{% endif %}
						{% endif %}
					</ul>
					<ul class="nav navbar-nav pull-right">
						<li>
							<a href="{{ path('login') }}" title="Login"><span class="glyphicon glyphicon-log-in"></span>
								Connexion
							</a>
						</li>
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<li>
							<a href="{{ path('logout') }}" title="Login"><span class="glyphicon glyphicon-log-out"></span>
								Déconnexion
							</a>
						</li>
						{% endif %}	
					</ul>
				</div>
			</div>
			{% endblock %}

			<div class="fluid-container q-main-container clearfix">

			{% block main_container %}


			<div class="container">
				<div class="row">
					<div class="col-xs-10 col-md-10 col-md-6 col-lg-6">
						<div class="error-template">
							<h1>Oops! I, did it again !</h1>
							<h2>404 Not Found</h2>
							<div class="error-details">
								<p>
									Je n'ai pas trouvé la page, en revanche j'ai cette vidéo youtube,
									qui pourrait t'intéresser :
									<a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" title="Non, c'est une vidéo trop marrante, vas-y clique !">Comment gagner de l'argent rapidement</a>.
								</p>
							</div>
							<div class="error-actions">
								<a href="http://quoty.jeremy-ta.fr" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
									Retour à l'accueil </a><a href="mailto:contact@jeremy-ta.fr?subject=Feedback Quoty" title="email me" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Me contacter </a>

							</div>
						</div>
					</div>
				</div>
			</div>

			{% endblock %}

			</div>

			<div class="fluid-container clearfix q-footer-container text-center">
				<div class="row">
					<footer class="footer text-center center-block">
						<p><span class="glyphicon glyphicon-copyright-mark"></span> 2014 Jérémy Ta Some Rights Reserved</p>
					</footer>
				</div>
			</div>

		</div><!-- End wrapper -->

		<!-- jQuery -->
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<!-- Bootstrap JavaScript -->
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	</body>
</html>